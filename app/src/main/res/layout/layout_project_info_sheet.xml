<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
	<LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/sheet_title"
                android:text="@string/project_info_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:src="@drawable/ic_close"
                android:contentDescription="@string/close"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/black" />
        </LinearLayout>

        <!-- GENERAL -->
        <TextView
		    android:text="@string/project_info_general_title"
		    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

		<com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

		<com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

		<com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_modified_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/layout_project_info_divider" />

        <!-- STRUCTURE -->
        <TextView
		    android:text="@string/project_info_structure_title"
		    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

		<com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_files_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/layout_project_info_divider" />

		<!-- BUILD -->
		<TextView
		    android:text="@string/project_info_build_title"
		    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_gradle_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_kotlin_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.itsaky.androidide.ui.InfoRowView
            android:id="@+id/info_java_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
	</LinearLayout>
</ScrollView>
