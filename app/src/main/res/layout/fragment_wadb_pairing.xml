<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/notification_card"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/content_padding_double">

			<ImageView
				android:id="@+id/notification_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ic_notification"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"

				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/notification_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_notification"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/notification_icon"
				app:layout_constraintTop_toTopOf="@id/notification_icon" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/action_open_notification_settings"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/content_padding"
				android:text="@string/adb_pairing_action_enable_notifications"
				app:icon="@drawable/ic_open_external"
				app:layout_constraintStart_toStartOf="@id/notification_label"
				app:layout_constraintTop_toBottomOf="@id/notification_label" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>

	<androidx.legacy.widget.Space
		android:id="@+id/notification_and_network_card_spacing"
		android:layout_width="0dp"
		android:layout_height="@dimen/content_padding_double"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/notification_card" />

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/network_card"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/notification_and_network_card_spacing">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/content_padding_double">

			<ImageView
				android:id="@+id/network_help_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_action_help_outlined"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/network_help_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_network"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/network_help_icon"
				app:layout_constraintTop_toTopOf="@id/network_help_icon" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/network_help_description"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_network_limation_not_foreground"
				android:textStyle="bold"
				app:layout_constraintEnd_toEndOf="@id/network_help_label"
				app:layout_constraintStart_toStartOf="@id/network_help_label"
				app:layout_constraintTop_toBottomOf="@id/network_help_label" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>

	<androidx.legacy.widget.Space
		android:id="@+id/network_and_miui_steps_card_spacing"
		android:layout_width="0dp"
		android:layout_height="@dimen/content_padding_double"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/network_card" />

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/miui_card"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/network_and_miui_steps_card_spacing">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/content_padding_double">

			<ImageView
				android:id="@+id/miui_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_action_help_outlined"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/miui_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_miui"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/miui_icon"
				app:layout_constraintTop_toTopOf="@id/miui_icon" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/miui_help_description"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_miui_2"
				android:textColor="?attr/colorError"
				app:layout_constraintEnd_toEndOf="@id/miui_label"
				app:layout_constraintStart_toStartOf="@id/miui_label"
				app:layout_constraintTop_toBottomOf="@id/miui_label" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>

	<androidx.legacy.widget.Space
		android:id="@+id/miui_and_wadb_steps_card_spacing"
		android:layout_width="0dp"
		android:layout_height="@dimen/content_padding_double"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/miui_card" />

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/wadb_steps_card"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/miui_and_wadb_steps_card_spacing">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/content_padding_double">

			<ImageView
				android:id="@+id/wadb_step_one_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_numeric_1"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/wadb_step_one_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_steps"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/wadb_step_one_icon"
				app:layout_constraintTop_toTopOf="@id/wadb_step_one_icon" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/wadb_step_one_description"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_left_is_clickable"
				android:textColor="?attr/colorError"
				app:layout_constraintEnd_toEndOf="@id/wadb_step_one_label"
				app:layout_constraintStart_toStartOf="@id/wadb_step_one_label"
				app:layout_constraintTop_toBottomOf="@id/wadb_step_one_label" />

			<com.google.android.material.button.MaterialButton
				android:id="@+id/action_open_developer_options"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/content_padding"
				android:text="@string/adb_pairing_action_start"
				app:icon="@drawable/ic_open_external"
				app:layout_constraintStart_toStartOf="@id/wadb_step_one_description"
				app:layout_constraintTop_toBottomOf="@id/wadb_step_one_description" />

			<androidx.legacy.widget.Space
				android:id="@+id/wadb_step_one_and_two_spacing"
				android:layout_width="0dp"
				android:layout_height="@dimen/content_padding"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/action_open_developer_options" />

			<ImageView
				android:id="@+id/wadb_step_two_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_numeric_2"
				app:layout_constraintEnd_toEndOf="@id/wadb_step_one_icon"
				app:layout_constraintStart_toStartOf="@id/wadb_step_one_icon"
				app:layout_constraintTop_toBottomOf="@id/wadb_step_one_and_two_spacing"
				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/wadb_step_two_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_enter_pairing_code"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/wadb_step_two_icon"
				app:layout_constraintTop_toTopOf="@id/wadb_step_two_icon" />

			<androidx.legacy.widget.Space
				android:id="@+id/wadb_step_two_and_three_spacing"
				android:layout_width="0dp"
				android:layout_height="@dimen/content_padding"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/wadb_step_two_label" />

			<ImageView
				android:id="@+id/wadb_step_three_icon"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:src="@drawable/ic_numeric_3"
				app:layout_constraintEnd_toEndOf="@id/wadb_step_two_icon"
				app:layout_constraintStart_toStartOf="@id/wadb_step_two_icon"
				app:layout_constraintTop_toBottomOf="@id/wadb_step_two_and_three_spacing"
				app:tint="?attr/colorOnSurface" />

			<com.google.android.material.textview.MaterialTextView
				android:id="@+id/wadb_step_three_label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/content_padding"
				android:text="@string/adb_pairing_tutorial_content_finish"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toEndOf="@id/wadb_step_three_icon"
				app:layout_constraintTop_toTopOf="@id/wadb_step_three_icon" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
