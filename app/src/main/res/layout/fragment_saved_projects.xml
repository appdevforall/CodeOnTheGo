<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorSurface"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/exit_button"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/recent_projects_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@string/msg_open_existing_project"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:transitionName="title" />

        <!-- Search field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_project_input_layout"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:hint="@string/search_projects_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_project_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSearch"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Sort controls -->
        <LinearLayout
            android:id="@+id/sort_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Sort by field -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/sort_field_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:singleSelection="true"
                app:chipSpacingHorizontal="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_by_name_btn"
                    style="@style/Widget.Material3.Chip.Input.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:textSize="12sp"
                    app:chipIconSize="14sp"
                    android:text="@string/sort_by_name" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_by_created_btn"
                    style="@style/Widget.Material3.Chip.Input.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:textSize="12sp"
                    app:chipIconSize="14sp"
                    android:text="@string/sort_by_created" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_by_modified_btn"
                    style="@style/Widget.Material3.Chip.Input.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:textSize="12sp"
                    app:chipIconSize="14sp"
                    android:text="@string/sort_by_modified" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Direction -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/sort_direction_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:chipSpacingHorizontal="4dp"
                android:layout_marginStart="6dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_asc_btn"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    app:chipIconSize="14dp"
                    android:text=""
                    app:chipIcon="@drawable/ic_arrow_up" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/sort_desc_btn"
                    style="@style/Widget.Material3.Chip.Assist.Elevated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    app:chipIconSize="14dp"
                    android:text=""
                    app:chipIcon="@drawable/ic_arrow_down" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_projects"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/saved_recent_project_item"
            android:paddingTop="0dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/no_projects_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="@dimen/cornerLow"
            android:text="@string/msg_no_recent_projects"
            android:textSize="22sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCreateNewProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:padding="8dp"
            android:text="@string/msg_create_new_from_recent"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_from_folder"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:layout_margin="16dp"
            android:layout_below="@id/tvCreateNewProject"
            android:layout_centerHorizontal="true"
            android:text="@string/open_from_folder" />

    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exit_button"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/open_from_folder_btn"
        android:layout_marginHorizontal="16dp"
        android:text="@string/exit"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/new_project_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/exit_button"
        android:layout_marginHorizontal="16dp"
        android:text="@string/new_project" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/open_from_folder_btn"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_from_folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
