<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.sidebar.ContextSelectionFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/context_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Add Context"
        app:navigationIcon="@drawable/ic_back" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="SELECTED CONTEXT"
        android:textAppearance="?attr/textAppearanceLabelMedium"
        android:textColor="?attr/colorPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_context_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:minHeight="48dp"
        tools:listitem="@layout/list_item_context_chip"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="FILES AND FOLDERS"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/context_file_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="app/src/main/java/.../MainActivity.kt"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_language_kotlin"
                android:drawablePadding="16dp"/>
            <TextView
                android:id="@+id/context_file_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="app/src/main/res/layout/activity_main.xml"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_language_xml"
                android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="WEB SEARCH"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/context_web_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search the web for an answer"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="GIT"
                android:textAppearance="?attr/textAppearanceLabelMedium"
                android:textColor="?attr/colorPrimary"/>
            <TextView
                android:id="@+id/context_git_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Git Status"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_git"
                android:drawablePadding="16dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btn_cancel_context"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"/>

        <Button
            android:id="@+id/btn_confirm_context"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm"/>
    </LinearLayout>

</LinearLayout>