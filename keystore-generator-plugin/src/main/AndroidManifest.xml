<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:label="Keystore Generator Plugin"
        android:theme="@style/Theme.AppCompat">

        <!-- Plugin metadata -->
        <meta-data
            android:name="plugin.id"
            android:value="com.appdevforall.keygen.plugin" />

        <meta-data
            android:name="plugin.name"
            android:value="Keystore Generator" />

        <meta-data
            android:name="plugin.version"
            android:value="1.0.1" />

        <meta-data
            android:name="plugin.description"
            android:value="Generate Android keystores for release builds directly from COGO" />

        <meta-data
            android:name="plugin.author"
            android:value="AppDevForAll" />

        <meta-data
            android:name="plugin.min_ide_version"
            android:value="1.0.0" />

        <meta-data
            android:name="plugin.permissions"
            android:value="filesystem.read,filesystem.write,project.structure" />

        <meta-data
            android:name="plugin.main_class"
            android:value="com.appdevforall.keygen.plugin.KeystoreGeneratorPlugin" />

        <meta-data
            android:name="plugin.sidebar_items"
            android:value="1" />

    </application>

</manifest>