<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:label="APK Viewer"
        android:theme="@style/Theme.AppCompat">

        <!-- Plugin metadata -->
        <meta-data
            android:name="plugin.id"
            android:value="com.example.apkviewer" />

        <meta-data
            android:name="plugin.name"
            android:value="APK Viewer" />

        <meta-data
            android:name="plugin.version"
            android:value="1.0.0" />

        <meta-data
            android:name="plugin.description"
            android:value="Analyze APK structure, contents, and metadata. View file sizes, native libraries, resources, and compression details." />

        <meta-data
            android:name="plugin.author"
            android:value="CodeOnTheGo Team" />

        <meta-data
            android:name="plugin.min_ide_version"
            android:value="1.0.0" />

        <meta-data
            android:name="plugin.permissions"
            android:value="filesystem.read,filesystem.write,project.structure" />

        <meta-data
            android:name="plugin.main_class"
            android:value="com.example.sampleplugin.ApkViewer" />

    </application>

</manifest>
