<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_plugin_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_plugin_description"
        android:textSize="14sp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tv_capabilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_plugin_capabilities"
        android:textSize="12sp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btn_test_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_plugin_action"
        android:layout_marginTop="16dp" />

</LinearLayout>